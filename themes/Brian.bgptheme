# This is an alternative approach. Single line in git repo.
override_git_prompt_colors() {
  GIT_PROMPT_THEME_NAME="Brian"

  GIT_PROMPT_START_USER="${TITLEBAR}\[\e[1;${PROMPT_COLOR}m\][\u@\h \W ]${ResetColor}"
  GIT_PROMPT_END_USER="\[\e[1;${PROMPT_COLOR}m\] $ ${ResetColor}"
  GIT_PROMPT_END_ROOT="${BoldRed} # "
}

reload_git_prompt_colors "Single_line"

